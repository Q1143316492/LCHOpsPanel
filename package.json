{
  "name": "lch-ops-panel",
  "displayName": "LCH Ops Panel",
  "publisher": "Weylochen",
  "description": "A VS Code extension for managing workspace configurations with custom paths, documents, executable scripts, and commands in a tree view panel",
  "version": "1.4.2",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Q1143316492/LCHOpsPanel.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lchOpsPanel",
          "title": "LCH Ops Panel",
          "icon": "$(octoface)"
        }
      ]
    },
    "views": {
      "lchOpsPanel": [
        {
          "id": "lchOpsPanelView",
          "name": "Operations Panel",
          "when": "workspaceFolderCount > 0"
        },
        {
          "id": "lchNoticeCollectionView",
          "name": "Notice Collections",
          "when": "workspaceFolderCount > 0"
        },
        {
          "id": "lchGamesPanelView",
          "name": "Mini Games",
          "type": "webview",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "commands": [
      {
        "command": "lchOpsPanel.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "lchOpsPanel.addItem",
        "title": "Add New Item",
        "icon": "$(add)"
      },
      {
        "command": "lchOpsPanel.editItem",
        "title": "Edit Item",
        "icon": "$(edit)"
      },
      {
        "command": "lchOpsPanel.deleteItem",
        "title": "Delete Item",
        "icon": "$(trash)"
      },
      {
        "command": "lchOpsPanel.openFile",
        "title": "Open File"
      },
      {
        "command": "lchOpsPanel.executeScript",
        "title": "Execute Script"
      },
      {
        "command": "lchOpsPanel.openInTerminal",
        "title": "Open in Terminal"
      },
      {
        "command": "lchOpsPanel.executeCommand",
        "title": "Execute Command"
      },
      {
        "command": "lchOpsPanel.switchNoticeCollection",
        "title": "Switch Notice Collection",
        "icon": "$(list-selection)"
      },
      {
        "command": "lchOpsPanel.addNoticeCollection",
        "title": "Add Notice Collection",
        "icon": "$(folder-library)"
      },
      {
        "command": "lchOpsPanel.manageNoticeCollections",
        "title": "Manage Notice Collections",
        "icon": "$(settings-gear)"
      },
      {
        "command": "lchOpsPanel.startGame2048",
        "title": "Start 2048 Game",
        "icon": "$(game)"
      },
      {
        "command": "lchOpsPanel.startGameMinesweeper",
        "title": "Start Minesweeper",
        "icon": "$(target)"
      },
      {
        "command": "lchOpsPanel.switchGame",
        "title": "Switch Game",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "lchOpsPanel.resetGame",
        "title": "Reset Game",
        "icon": "$(refresh)"
      },
      {
        "command": "lchOpsPanel.openConfigFile",
        "title": "Open Config File",
        "icon": "$(file-code)"
      },
      {
        "command": "lchOpsPanel.openJsonEditor",
        "title": "Open JSON Tree Editor",
        "icon": "$(symbol-structure)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "lchOpsPanel.refresh",
          "when": "view == lchOpsPanelView",
          "group": "navigation@5"
        },
        {
          "command": "lchOpsPanel.addItem",
          "when": "view == lchOpsPanelView",
          "group": "navigation@10"
        },
        {
          "command": "lchOpsPanel.openConfigFile",
          "when": "view == lchOpsPanelView",
          "group": "navigation@15"
        },
        {
          "command": "lchOpsPanel.switchNoticeCollection",
          "when": "view == lchNoticeCollectionView",
          "group": "navigation@1"
        },
        {
          "command": "lchOpsPanel.addNoticeCollection",
          "when": "view == lchNoticeCollectionView",
          "group": "navigation@2"
        },
        {
          "command": "lchOpsPanel.manageNoticeCollections",
          "when": "view == lchNoticeCollectionView",
          "group": "navigation@3"
        },
        {
          "command": "lchOpsPanel.switchGame",
          "when": "view == lchGamesPanelView",
          "group": "navigation@1"
        },
        {
          "command": "lchOpsPanel.resetGame",
          "when": "view == lchGamesPanelView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "lchOpsPanel.openFile",
          "when": "view == lchOpsPanelView && viewItem == file",
          "group": "1_actions@1"
        },
        {
          "command": "lchOpsPanel.openFile",
          "when": "view == lchNoticeCollectionView && viewItem == notice-file",
          "group": "1_actions@1"
        },
        {
          "command": "lchOpsPanel.executeScript",
          "when": "view == lchOpsPanelView && viewItem == script",
          "group": "1_actions@1"
        },
        {
          "command": "lchOpsPanel.openInTerminal",
          "when": "view == lchOpsPanelView && viewItem == script",
          "group": "1_actions@2"
        },
        {
          "command": "lchOpsPanel.executeCommand",
          "when": "view == lchOpsPanelView && viewItem == command",
          "group": "1_actions@1"
        },
        {
          "command": "lchOpsPanel.editItem",
          "when": "view == lchOpsPanelView && (viewItem == file || viewItem == script || viewItem == command)",
          "group": "2_manage@1"
        },
        {
          "command": "lchOpsPanel.deleteItem",
          "when": "view == lchOpsPanelView && (viewItem == file || viewItem == script || viewItem == command)",
          "group": "2_manage@2"
        }
      ],
      "editor/title": [
        {
          "command": "lchOpsPanel.openJsonEditor",
          "when": "resourceExtname == .json",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "lchOpsPanel.jsonTreeEditor",
        "displayName": "JSON Tree Editor",
        "selector": [
          {
            "filenamePattern": "*.json"
          }
        ],
        "priority": "option"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}